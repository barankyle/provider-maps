{
  "version": "1.0",

  "name": "Google",
  "description": "Internet-related services and products.",
  "url": "https://www.googleapis.com",
  "tags": ["collaboration", "media", "productivity", "social", "video"],

  "auth": {
    "type": "oauth2",
    "redirect_url": "https://www.google.com",
    "authorization_url": "https://accounts.google.com/o/oauth2/auth?access_type=offline&approval_prompt=force",

    "access_token": "https://accounts.google.com/o/oauth2/token",

    "signature": "parameter",

    "auth_key": null,
    "auth_secret": null
  },

  "meta": {
    "uniqueness_location": "id",
    "default_name_location": "id",
    "endpoint": {
      "method": "GET",
      "scopes": ["https://www.googleapis.com/auth/userinfo.profile"],
      "route": {
        "data": "metadata.sources[0]",
        "path": "https://people.googleapis.com/v1/people/me"
      },
      "model": {
        "key": "id",
        "fields": {
          "id": "string"
        }
      }
    }
  },

  "endpoints": {
    "YoutubeChannels": {
      "method": "GET",
      "scopes": ["https://www.googleapis.com/auth/youtube.readonly"],
      "parameters": {
        "part": {
          "description": "Channel resources",
          "value": "contentDetails"
        },
        "mine": {
          "description": "Only get data for the authenticated user",
          "value": true
        }
      },
      "routes": {
        "single": null,
        "collection": {
          "data": "items",
          "path": "youtube/v3/channels"
        }
      },
      "model": {
        "key": "id_str",
        "fields": {
          "contentDetails": {
            "type": "embedded",
            "fields": {
              "relatedPlaylists": {
                "type": "embedded",
                "fields": {
                  "watchHistory": "string",
                  "uploads": "string"
                }
              }
            }
          },
          "watch_history": {
            "type": "related",
            "ref": "YoutubePlaylist",
            "many": true,
            "reverse": {
              "parameters": {
                "playlistId": "contentDetails.relatedPlaylists.watchHistory"
              }
            }
          },
          "upload_history": {
            "type": "related",
            "ref": "YoutubePlaylist",
            "many": true,
            "reverse": {
              "parameters": {
                "playlistId": "contentDetails.relatedPlaylists.uploads"
              }
            }
          }
        }
      }
    },
    "YoutubePlaylist": {
      "method": "GET",
      "scopes": ["https://www.googleapis.com/auth/youtube.readonly"],
      "parameters": {
        "fields": {
          "description": "Restrict which fields are returned by the endpoint",
          "value": "items(id,snippet),nextPageToken"
        },
        "maxResults": {
          "description": "Maximum number of results to be returned at once",
          "value": 50
        },
        "pageToken": {
          "description": "Token for the next page in the results",
          "value": "$connection.endpoint_data.YoutubePlaylist.pageToken"
        },
        "part": {
          "description": "Channel resources",
          "value": "snippet"
        },
        "playlistId": {
          "description": "ID of the user's Watch History playlist",
          "supplied": true
        }
      },
      "routes": {
        "single": null,
        "collection": {
          "data": "items",
          "path": "youtube/v3/playlistItems"
        }
      },
      "model": {
        "key": "id",
        "fields": {
          "id": "string",
          "url": {
            "type": "composite",
            "parameters": "https://www.youtube.com/watch?v={{ snippet.resourceId.videoId }}"
          },
          "snippet": {
            "type": "embedded",
            "fields": {
              "title": "string",
              "description": "string",
              "publishedAt": "date"
            }
          },
          "oembed": {
            "type": "related",
            "ref": "YoutubeOEmbed",
            "many": false,
            "reverse": {
              "parameters": {
                "url": "url"
              }
            }
          }
        }
      }
    },
    "YoutubeOEmbed": {
      "method": "GET",
      "except": [404, 401],
      "parameters": {
        "url": {
          "description": "URL of YouTube video",
          "supplied": true
        },
        "format": {
          "description": "Format of returned data",
          "value": "json"
        }
      },
      "routes": {
        "single": {
          "data": "",
          "path": "https://www.youtube.com/oembed"
        }
      },
      "model": {
        "key": "id",
        "fields": {
          "html": "string",
          "thumbnail_url": "string"
        }
      }
    },
    "GmailInbox": {
      "method": "GET",
      "scopes": ["https://www.googleapis.com/auth/gmail.readonly"],
      "parameters": {
        "pageToken": {
          "description": "Token for the next page in the results",
          "value": "$connection.endpoint_data.GmailInbox.pageToken"
        },
        "q": {
          "description": "QueryString",
          "value": "after:{{ connection.endpoint_data.GmailInbox.q }}",
          "default": "2015-01-01"
        }
      },
      "routes": {
        "single": null,
        "collection": {
          "data": "messages",
          "path": "gmail/v1/users/me/messages"
        }
      },
      "model": {
        "key": "id",
        "fields": {
          "id": "string",
          "message": {
            "type": "related",
            "ref": "GmailMessage",
            "many": false,
            "reverse": {
              "parameters": {
                "id": "id"
              }
            }
          }
        }
      }
    },
    "GmailMessage": {
      "method": "GET",
      "scopes": ["https://www.googleapis.com/auth/gmail.readonly"],
      "parameters": {
        "id": {
          "description": "ID of the message",
          "supplied": true
        }
      },
      "routes": {
        "single": {
          "data": "",
          "path": "gmail/v1/users/me/messages/{{ id }}"
        }
      },
      "model": {
        "key": "id",
        "fields": {
          "id": "string",
          "internalDate": "string",
          "payload": {
            "type": "embedded",
            "fields": {
              "mimeType": "string",
              "body": {
                "type": "embedded",
                "fields": {
                  "data": "string"
                }
              },
              "headers": {
                "type": "embedded",
                "many": true,
                "fields": {
                  "name": "string"
                }
              },
              "parts": {
                "type": "embedded",
                "many": true,
                "fields": {
                  "mimeType": "string",
                  "body": {
                    "type": "embedded",
                    "fields": {
                      "data": "string"
                    }
                  },
                  "parts": {
                    "type": "embedded",
                    "many": true,
                    "fields": {
                      "mimeType": "string",
                      "body": {
                        "type": "embedded",
                        "fields": {
                          "data": "string"
                        }
                      },
                      "parts": {
                        "type": "embedded",
                        "many": true,
                        "fields": {
                          "mimeType": "string",
                          "body": {
                            "type": "embedded",
                            "fields": {
                              "data": "string"
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "profile": {
            "type": "related",
            "ref": "GmailProfile",
            "many": false
          }
        }
      }
    },
    "GmailProfile": {
      "method": "GET",
      "scopes": ["https://www.googleapis.com/auth/gmail.readonly"],
      "routes": {
        "single": {
          "data": "",
          "path": "gmail/v1/users/me/profile"
        }
      },
      "model": {
        "key": "emailAddress",
        "fields": {
          "emailAddress": "string"
        }
      }
    },
    "DriveChanges": {
      "method": "GET",
      "scopes": ["https://www.googleapis.com/auth/drive.readonly"],
      "parameters": {
        "pageToken": {
          "description": "A token indicating which page of results to retrieve",
          "value": "{{ connection.endpoint_data.DriveChanges.pageToken }}",
          "default": "1"
        },
        "includeRemoved": {
          "description": "Whether to include file deletions or files to which the user has lost access",
          "value": true
        },
        "pageSize": {
          "description": "Number of results returned in a page",
          "value": 1000
        },
        "fields": {
          "description": "Which fields to include in the response",
          "value": "changes,newStartPageToken,nextPageToken"
        }
      },
      "routes": {
        "single": null,
        "collection": {
          "data": "changes",
          "path": "drive/v3/changes"
        }
      },
      "model": {
        "key": "id",
        "fields": {
          "fileId": "string",
          "time": "string",
          "removed": "boolean",
          "file": {
            "type": "embedded",
            "fields": {
              "mimeType": "string",
              "name": "string",
              "webViewLink": "string",
              "thumbnailLink": "string",
              "fullFileExtension": "string",
              "viewedByMeTime": "date",
              "createdTime": "date",
              "permissions": {
                "type": "embedded",
                "many": true,
                "fields": {
                  "type": "string",
                  "me": "boolean",
                  "emailAddress": "string",
                  "displayName": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}
