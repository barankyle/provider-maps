{
  "version": "1.0",

  "name": "Github",
  "description": "Collaborative code development service.",
  "url": "https://api.github.com",
  "tags": ["collaboration", "development", "productivity"],

  "auth": {
    "type": "oauth2",
    "redirect_url": "https://github.com",
    "authorization_url": "https://github.com/login/oauth/authorize",
    "access_token": "https://github.com/login/oauth/access_token",

    "signature": "parameter",

    "auth_key": null,
    "auth_secret": null
  },

  "meta": {
    "uniqueness_location": "login",
    "default_name_location": "login",
    "endpoint": {
      "method": "GET",
      "route": {
        "data": "",
        "path": "user"
      },
      "model": {
        "key": "login",
        "fields": {
          "login": "string"
        }
      }
    }
  },

  "endpoints": {
    "Events": {
      "method": "GET",
      "scopes": ["repo:status"],
      "parameters": {
        "next_url": {
          "description": "The URL for the next page",
          "value": "$connection.endpoint_data.Events.next_url"
        },
        "page": {
          "description": "The page number for the endpoint",
          "value": "$connection.endpoint_data.Events.page"
        }
      },
      "routes": {
        "single": null,
        "collection": {
          "data": "",
          "path": "users/{{ connection.metadata.login }}/events"
        }
      },
      "model": {
        "key": "id",
        "fields": {
          "id": "string",
          "created_at": "date",
          "ref_type": "string",
          "type": "string",
          "payload": {
            "type": "embedded",
            "fields": {
              "action": "string",
              "comment": {
                "type": "embedded",
                "fields": {
                  "body": "string",
                  "id": "string",
                  "html_url": "string",
                  "created_at": "date"
                }
              },
              "ref": "string",
              "ref_type": "string",
              "issue": "string",
              "forkee": {
                "type": "embedded",
                "fields": {
                  "full_name": "string",
                  "description": "string",
                  "id": "string",
                  "html_url": "string",
                  "owner": {
                    "type": "embedded",
                    "fields": {
                      "login": "string"
                    }
                  }
                }
              },
              "pull_request": {
                "type": "embedded",
                "fields": {
                  "title": "string",
                  "body": "string",
                  "id": "string",
                  "html_url": "string",
                  "user": {
                    "type": "embedded",
                    "fields": {
                      "login": "string"
                    }
                  }
                }
              },
              "commits": {
                "type": "embedded",
                "many": true,
                "fields": {
                  "message": "string",
                  "sha": "string",
                  "url": "string",
                  "id": "string",
                  "author": {
                    "type": "embedded",
                    "fields": {
                      "name": "string",
                      "email": "string"
                    }
                  }
                }
              }
            }
          },
          "repo": {
            "type": "embedded",
            "fields": {
              "id": "string",
              "url": "string",
              "name": "string"
            }
          },
          "repo_info": {
            "type": "related",
            "ref": "Repo",
            "many": false,
            "reverse": {
              "path": {
                "repo_name": "repo.name"
              }
            }
          }
        }
      }
    },
    "Repo": {
      "method": "GET",
      "scopes": ["repo:status"],
      "parameters": {},
      "routes": {
        "single": {
          "data": "",
          "path": "repos/{{ repo_name }}"
        }
      },
      "model": {
        "key": "id",
        "fields": {
          "owner": {
            "type": "embedded",
            "fields": {
              "id": "string",
              "login": "string"
            }
          },
          "user": {
            "type": "related",
            "ref": "User",
            "many": false,
            "reverse": {
              "path": {
                "username": "owner.login"
              }
            }
          }
        }
      }
    },
    "User": {
      "method": "GET",
      "parameters": {
      },
      "routes": {
        "single": {
          "data": "",
          "path": "users/{{ username }}"
        }
      },
      "model": {
        "key": "name",
        "fields": {
          "name": "string",
          "id": "number",
          "login": "string"
        }
      }
    }
  }
}
