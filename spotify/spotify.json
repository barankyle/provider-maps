{
  "version": "1.0",

  "name": "Spotify",
  "description": "Music streaming service",
  "url": "https://api.spotify.com",
  "tags": ["media", "music"],

  "auth": {
    "type": "oauth2",
    "redirect_url": "https://www.spotify.com",
    "authorization_url": "https://accounts.spotify.com/authorize",

    "access_token": "https://accounts.spotify.com/api/token",

    "signature": "header",

    "auth_key": null,
    "auth_secret": null
  },

  "meta": {
    "uniqueness_location": "id",
    "default_name_location": "id",
    "endpoint": {
      "method": "GET",
      "route": {
        "data": "",
        "path": "v1/me"
      },
      "model": {
        "key": "id",
        "fields": {
          "id": "string"
        }
      }
    }
  },

  "endpoints": {
    "Playlists": {
      "method": "GET",
      "scopes": ["playlist-read-private", "playlist-read-collaborative"],
      "parameters": {
        "limit": {
          "description": "Pagination counts",
          "value": 50
        },
        "offset": {
          "description": "Where to start the next page of results",
          "value": "$connection.endpoint_data.Playlists.offset"
        }
      },
      "routes": {
        "single": null,
        "collection": {
          "data": "items",
          "path": "v1/me/playlists"
        }
      },
      "model": {
        "key": "id",
        "fields": {
          "id": "string",
          "name": "string",
          "uri": "string",
          "external_urls": {
            "type": "embedded",
            "fields": {
              "spotify": "string"
            }
          },
          "oembed": {
            "type": "related",
            "ref": "OEmbed",
            "many": false,
            "reverse": {
              "parameters": {
                "url": "{{ uri }}"
              }
            }
          }
        }
      }
    },
    "SavedAlbums": {
      "method": "GET",
      "scopes": ["user-library-read"],
      "parameters": {
        "limit": {
          "description": "Pagination counts",
          "value": 50
        },
        "offset": {
          "description": "Where to start the next page of results",
          "value": "$connection.endpoint_data.SavedAlbums.offset"
        }
      },
      "headers": {
        "access_token": {
          "description": "OAuth2 access token",
          "name": "Authorization",
          "value": "Bearer {{ connection.auth.data.access_token }}"
        }
      },
      "routes": {
        "single": null,
        "collection": {
          "data": "items",
          "path": "v1/me/albums"
        }
      },
      "model": {
        "key": "album.id",
        "fields": {
          "added_at": "string",
          "album": {
            "type": "embedded",
            "fields": {
              "id": "string",
              "external_urls": {
                "type": "embedded",
                "fields": {
                  "spotify": "string"
                }
              },
              "name": "string",
              "uri": "string"
            }
          },
          "oembed": {
            "type": "related",
            "ref": "OEmbed",
            "many": false,
            "reverse": {
              "parameters": {
                "url": "{{ album.uri }}"
              }
            }
          }
        }
      }
    },
    "SavedTracks": {
      "method": "GET",
      "scopes": ["user-library-read"],
      "parameters": {
        "limit": {
          "description": "Pagination counts",
          "value": 50
        },
        "offset": {
          "description": "Where to start the next page of results",
          "value": "$connection.endpoint_data.SavedTracks.offset"
        }
      },
      "headers": {
        "access_token": {
          "description": "OAuth2 access token",
          "name": "Authorization",
          "value": "Bearer {{ connection.auth.data.access_token }}"
        }
      },
      "routes": {
        "single": null,
        "collection": {
          "data": "items",
          "path": "v1/me/tracks"
        }
      },
      "model": {
        "key": "track.id",
        "fields": {
          "added_at": "string",
          "track": {
            "type": "embedded",
            "fields": {
              "id": "string",
              "external_urls": {
                "type": "embedded",
                "fields": {
                  "spotify": "string"
                }
              },
              "name": "string",
              "uri": "string"
            }
          },
          "oembed": {
            "type": "related",
            "ref": "OEmbed",
            "many": false,
            "reverse": {
              "parameters": {
                "url": "{{ track.uri }}"
              }
            }
          }
        }
      }
    },
    "OEmbed": {
      "method": "GET",
      "parameters": {
        "url": {
          "description": "URL of Spotify object",
          "supplied": true
        }
      },
      "routes": {
        "single": {
          "data": "",
          "path": "https://embed.spotify.com/oembed/"
        }
      },
      "model": {
        "key": "",
        "fields": {
          "html": "string",
          "thumbnail_url": "string"
        }
      }
    }
  }
}
